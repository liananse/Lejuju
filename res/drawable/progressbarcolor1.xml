<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="2.0dip" />

            <gradient
                android:centerColor="#f6f5f5"
                android:endColor="#f6f5f5"
                android:startColor="#f6f5f5" />

            <stroke
                android:width="1px"
                android:color="#BBBBBB" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="2.0dip" />

                <gradient
                    android:centerColor="#99e2e8"
                    android:endColor="#99e2e8"
                    android:startColor="#99e2e8" />

                <stroke
                    android:width="1px"
                    android:color="#53c5cd" />
            </shape>
        </clip>
    </item>

</layer-list>